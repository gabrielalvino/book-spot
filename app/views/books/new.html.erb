<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-12 rounded justify-content-center d-flex">
      <div class="bg-white col-9 col-md-6 col-lg-6 p-3 shadow">
        <h2>Sell a book:</h2>
        <%= simple_form_for @book do |f| %>
        <%= f.input :title %>
        <%= f.input :author %>
        <%= f.input :description %>
        <%= f.input :category, collection: Book::CATEGORIES, selected: "Romance"%>
        <%= f.input :price %>
        <%= f.input :photo, required: true, as: :file %>
        <%= f.button :submit, value: "Sell Book", class: 'btn btn-light-blue rounded-pill' %>
      <% end %>
      </div>
      <div class="col-3 new-book-img"></div>
    </div>
  </div>
</div>
